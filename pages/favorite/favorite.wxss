/* pages/favorite/favorite.wxss */
.article-block{
  height: 100%;
  background: white;
  padding: 30rpx;
  border-bottom-style: solid;
  border-width: medium;
  border-color: #f5f5f5;
}
.article-title{
  color: black;
  font-size: 34rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-bottom: 30rpx;
}
.article-image-section{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}
.article-image-one{
  width: 690rpx;
  height: 390rpx;
}
.article-image-two{
  width: 335rpx;
  height: 190rpx;
}
.article-image-three{
  width: 220rpx;
  height: 165rpx;
}