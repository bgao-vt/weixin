/**index.wxss**/
.header{
  height: 450rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #A9CCE3;
}
.login{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.logo{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.logo image{width:200rpx; height: 200rpx}
.logotxt{
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: white;
  font-size: large;
  font-weight: bold;
  font-family: 微软雅黑;
  margin-bottom: 30rpx;
}
.search{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 62%;
  background: white;
  margin-left: 19%;
}