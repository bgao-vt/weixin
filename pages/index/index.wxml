    <view class="logoSec">
      <image class="logoImg" mode="aspectFit" src="/images/logo.jpg"></image>
      <text class="logoTxt">移动投资服务平台</text>
    </view>
    <view class="searchSec">
      <icon class="searchIcn" type="search" size="14"></icon>
      <input class="input" placeholder="请输入搜索信息" bindtap="toSearchView" />
    </view>
  </view>

  <!--滚动新闻区域-->
  <view class="feedArea">
    <view class="marqueeTxt" style="{{open? 'display: none' : ''}} {{orientation}}:{{marqueeDistance}}px;font-size: {{size}}px;" wx:for="{{text}}">
      <text style="margin-left: {{gap}}px">{{item}}</text>
      <!--<text wx:if="{{marquee2copy_status}}" style="margin-left:{{marquee2_margin}}px;">{{item}}</text>-->
    </view>
  </view>
  
  <!--概况信息区域-->
  <view class="overviewArea">
    <view class="overviewTop">
      <image class="overviewImg" src="/images/star.png"></image>
      <image class="overviewImg" src="/images/star.png"></image>
      <image class="overviewImg" src="/images/star.png"></image>
    </view>
    <view class="overviewBtm">
      <text>区情概况</text>
      <text>重点企业</text>
      <text>投资政策</text>
    </view>
  </view>

  <!--发展规划区域-->
  <view class="planArea">
    <view class="planTtl">发展规划</view>
    <view class="planTxt">
      <text>“一轴、两带、三园、多支点”空间布局</text>
      <text>查看详情>></text>
    </view>
    <view class="mapSec">
      <image class="mapImgSml" src="/images/logo.jpg"></image>
    </view>
  </view>

  <!--投资专题区域-->
  <view class="specialArea">
    <view class="specialTtl">投资专题</view>
    <view class="specProjSec">
      <image class="specProjImg" src="/images/logo.jpg"></image>
      <image class="specProjImg" src="/images/logo.jpg"></image>
      <image class="specProjImg" src="/images/logo.jpg"></image>
      <image class="specProjImg" src="/images/logo.jpg"></image>
    </view>
  </view>

  <!--重点项目区域-->
  <view class="keyArea">
    <view class="keyTtl">
      <text>重点项目</text> 
      <text>查看详情>></text>
    </view>
    <view class="keyProjSec">
      <image class="keyProjImg" src="/images/logo.jpg"></image>
      <image class="keyProjImg" src="/images/logo.jpg"></image>
    </view>
  </view>

