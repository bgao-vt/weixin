<!--pages/info/info.wxml-->
<view class="main-page">
  <swiper class="swiper-area" indicator-dots="true" autoplay="true" interval="5000" duration="1000"> 
    <block wx:for="{{movies}}" wx:for-index="index"> 
      <swiper-item> 
        <image src="{{item.url}}" class="slide-image" mode="aspectFill"/> 
      </swiper-item> 
    </block> 
  </swiper> 

  <view class='channel-area'>
    <view class='channel-block' wx:for="{{channelButtons}}" wx:for-index="idx" wx:for-item="channel">
        <image class='channel-image' src='{{channel.image}}'/> 
        <text>{{channel.text}}</text>
    </view>
  </view>

  <view class="article-block">
    <text class="article-title">中关村虚拟现实产业园在石景山启动（附规划和政策）</text>
    <view class="article-image">
      <image mode="scaleToFill" style="height:200rpx" src="/images/banner_guide.png"></image>
      <image mode="scaleToFill" style="height:200rpx" src="/images/banner_guide.png"></image>
    </view>
  </view>

  <image style="width:150rpx; height:150rpx; margin-top:150rpx; margin-left:40%" src="/images/icon_logo_grey.png"></image>
</view>
