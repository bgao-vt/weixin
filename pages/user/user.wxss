/* pages/user/user.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 125rpx;
}
.userinfo-avatar {
  width: 130rpx;
  height: 130rpx;
  margin: 20rpx;
  margin-top: 110rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: white;
}

.banner-area{
  width: 100%;
  height: 570rpx;
  background-image: url("http://shijingshan-1254017066.costj.myqcloud.com/app_images/banner_user.png");
  background-size: 100%;
}
.bottom-area{
  height: 700rpx;
  background: #f5f5f5;
}
.button-block{
  width: 78%;
  height: 120rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 5%;
  padding-left: 6%;
  padding-right: 6%;
  border-radius: 10rpx;
}
.button-text{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}