/**app.wxss**/
.main-page{
  height: 100%;
  background: #f5f5f5;
  padding-bottom: 200rpx;
}
.vertical-space{
  padding-top: 20rpx;
}
.text-bold{
  font-weight: bold;
  font-size: 32rpx;
}
.text-lightblue{
  color: #78D1E9;
}
.text-darkblue{
  color: #376dab;
}

.article-fulltext-page{
  background: white;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  margin-bottom: 100rpx;
}
.article-fulltext-title{
  color: black;
  font-size: 45rpx;
  text-align: left;
  margin-bottom: 20rpx;
}
.article-fulltext-subtitle{
  color: black;
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
}
.article-fulltext-date{
  color: darkgrey;
  margin-bottom: 20rpx;
}
.article-fulltext-text{
  font-size: 32rpx;
  margin: 20rpx 0;
}
.article-fulltext-link{
  color: #78D1E9;
  text-decoration: underline;
  margin-bottom: 20rpx;
}
.article-fulltext-image{
  width: 100%;
  margin: 20rpx 0;
}
.article-fulltext-imgtitle{
  color: darkgrey;
  text-align: center;
  margin-bottom: 20rpx;
}

input{font-size: 32rpx; color: grey; font-family: "微软雅黑";}
button{font-size: 36rpx; color: grey; font-family: "微软雅黑";}
text{font-size: 28rpx; color: grey; font-family: "微软雅黑"}
